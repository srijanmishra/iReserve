@*@Html.TextBox("", String.Format("{0:d}", Model.Date.ToShortDateString()), new {@class="datefield", @type="label"})*@

@{
    var value = "";
    if (Model.HasValue)
    {
        value = String.Format("{0:d}", Model.Value.ToShortDateString());
    }
}

@Html.TextBox("", value, new {@class="datefield", @type="text"})