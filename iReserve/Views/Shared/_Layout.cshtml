<!DOCTYPE html>
@{
    ViewBag.Title = "iReserve";
    ViewBag.TimeStamp = System.DateTime.Now.ToString("hh:mm:ss tt");
    ViewBag.DateStamp = System.DateTime.Now.ToString("dddd") + ", " + System.DateTime.Now.ToString("dd MMMM yyyy");    
}

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width" />
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
        <script src="~/Scripts/jquery-1.8.2.min.js"></script>
        <script src="~/Scripts/jquery-1.8.2.js"></script>
        <script type="text/javascript" src="~/Scripts/DateTimeStamp.js"></script>
        @Styles.Render("~/Content/css")   
        @RenderSection("ViewingStyles", required: false)
        
        <script>
            $(document).ready(function () {
                setInterval('updateClock()', 1000);
            });
        </script>
    </head>

    <body>
        <header>            
            <div id="banner">
				<table class="bannertable">
                    <tr>
                        <th class="col1" />
                        <th class="col2" />
                    </tr>
                    <tr>
                        <td>
                            <h2>iReserve</h2>
                        </td>

                        <td>
                            <span id="TimeStamp"></span>
                            <br />
                            <span id="DateStamp"></span>
                        </td>
                    </tr>
				</table>
			</div>
        </header>
        <div id="body">            
            @*@RenderSection("featured", required: false)*@
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            @*<div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>*@
        </footer>
    </body>
</html>
