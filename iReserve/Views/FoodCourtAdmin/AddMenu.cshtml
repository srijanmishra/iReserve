              </tr>
    
              <tr>
                <td></td>
                <td>@Html.LabelFor(model => model.ServingDate)</td>
                <td>@Html.TextBoxFor(model => model.ServingDate, new {@type="text", @id="datefield2", @readonly="readonly", @style="background:white", @class="futureDates"})</td>
