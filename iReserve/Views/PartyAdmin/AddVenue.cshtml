<script type="text/javascript">
    $(document).ready(function () {
        $('#AddVenueBtn').click(function () {
            var VN = $('#VName').val();
            var VA = $('#VAddr').val();
            var VC = $('#VCap').val();

            $.ajax({
                type: 'POST',
                url: 'AddVenue',
                data: { VN: VN, VA: VA, VC: VC },
                dataType: "text",
                success: function (data) {
                    var result = $.trim(data);
                    alert(data);
                    if (result === "DONE") {
                        alert("Venue Created.");
                        window.location.reload(true);
                    }

                    else {
                        alert("Venue not added. Retry");
                    }
                }

            });
        });
    });
</script>

